<Window x:Class="Kincsvadaszok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kincsvadaszok"
        mc:Ignorable="d"
        Title="Treasure Hunter" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Treasure Hunter Storage" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtName" Width="150" Margin="0,0,10,0"/>
                
                <TextBlock Text="Value:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtValue" Width="60" Margin="0,0,10,0"/>
                
                <Button Content="Add" Click="AddButton_Click" Padding="5,2"/>
            </StackPanel>
        </StackPanel>

        <ListBox x:Name="lstTreasures" Grid.Row="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save (JSON)" Click="SaveButton_Click" Width="100" Margin="5"/>
            <Button Content="Load" Click="LoadButton_Click" Width="100" Margin="5"/>
            <Button Content="Start Adventure" Click="StartGameButton_Click" 
        Width="120" Height="40" Margin="5" Background="LightGreen" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>