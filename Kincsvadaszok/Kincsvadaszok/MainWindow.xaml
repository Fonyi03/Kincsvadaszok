<Window x:Class="Kincsvadaszok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kincsvadaszok"
        mc:Ignorable="d"
        Icon="Images/loot.png"
        Title="Treasure Hunter" Height="450" Width="400">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="KINCSVADÁSZOK LOBBY" FontSize="24" FontWeight="Bold" 
               Foreground="DarkSlateGray" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <GroupBox Grid.Row="1" Header="Játékosok Beállítása" Margin="0,0,0,20" Padding="10">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Játékos 1 Neve (Zöld):" FontWeight="Bold"/>
                        <TextBox x:Name="txtP1Name" Text="Player 1" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Játékos 2 Neve (Kék):" FontWeight="Bold"/>
                        <TextBox x:Name="txtP2Name" Text="Player 2" Padding="5"/>
                    </StackPanel>
                </Grid>

                <Button Content="JÁTÉK INDÍTÁSA" Click="StartGameButton_Click" 
                    Height="50" Background="LightGreen" FontWeight="Bold" FontSize="16" Cursor="Hand"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Korábbi Meccsek Eredményei" Margin="0,0,0,10">
            <ListBox x:Name="lstHistory" Background="#FAFAFA" FontSize="14"/>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Előzmények Mentése" Click="SaveButton_Click" Width="140" Margin="5"/>
            <Button Content="Előzmények Betöltése" Click="LoadButton_Click" Width="140" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
    
    
    